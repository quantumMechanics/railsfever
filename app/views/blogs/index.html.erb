<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td>TITLE: <%=link_to blog.title, blog %></td>
    <td>CONTENT: <%= blog.content %></td>
    <td>COMMENTS: <% blog.comments.each do |c| %> 
      <%= c.content %> |
    <% end %>
    </td>
    <td><%= link_to 'Show', blog %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>

<br />

<%= link_to 'New Blog', new_blog_path %>
<%= will_paginate @blogs %>
